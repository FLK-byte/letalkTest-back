generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                 Int         @id @default(autoincrement())
  cpf                String      @unique
  bornDate           DateTime
  uf                 String
  valueToLoan        Int
  valueToPayPerMonth Int
  createdAt          DateTime    @default(now())
  UserLoan           UserLoans[]
}

model UserLoans {
  id              Int      @id @default(autoincrement())
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  alreadyPaid     Boolean  @default(false)
  balance         Int
  interestRate    Int
  adjustedBalance Int
  portion         Int
  monthToPay      DateTime
  createdAt       DateTime @default(now())
}
